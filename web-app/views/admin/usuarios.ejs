        // Función para mostrar notificaciones toast
        function mostrarToast(mensaje, tipo = 'info', duracion = 5000) {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast ${tipo} fade-in`;
            
            toast.innerHTML = `
                <div class="toast-header">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-${tipo === 'success' ? 'check-circle' : tipo === 'error' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                        <strong>${tipo === 'success' ? 'Éxito' : tipo === 'error' ? 'Error' : 'Información'}</strong>
                    </div>
                    <button type="button" class="btn-close toast-close-btn"></button>
                </div>
                <div class="toast-body">
                    ${mensaje}
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Auto-remove
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.remove();
                }
            }, duracion);
        }
        
        // Función para cambiar rol de usuario
        async function cambiarRol(idUsuario, idRol) {
            console.log('🔄 Cambiando rol del usuario ID:', idUsuario, 'a rol ID:', idRol);
            
            const row = document.querySelector(`[data-user-id="${idUsuario}"]`);
            if (row) row.classList.add('loading');
            
            try {
                console.log('📡 Enviando solicitud de cambio de rol...');
                const response = await fetch('/admin/usuarios/cambiar-rol', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ idUsuario, idRol })
                });
                
                console.log('📡 Respuesta del servidor:', response.status);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const result = await response.json();
                console.log('📊 Resultado del cambio de rol:', result);
                
                if (result.success) {
                    mostrarToast('Rol actualizado exitosamente', 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    mostrarToast(result.error || 'Error al cambiar el rol', 'error');
                }
            } catch (error) {
                console.error('❌ Error en cambiarRol:', error);
                mostrarToast('Error de conexión: ' + error.message, 'error');
            } finally {
                if (row) row.classList.remove('loading');
            }
        }

        // Función para probar el cambio de rol
        function probarCambioRol(idUsuario) {
            console.log('🧪 Probando cambio de rol para usuario ID:', idUsuario);
