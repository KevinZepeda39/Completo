                console.log('   - Valor actual:', valorActual);
                console.log('   - Rol seleccionado:', textoSeleccionado);
                mostrarToast(`Probando cambio de rol - Revisa la consola`, 'info');
            } else {
                console.log('❌ No se encontró el selector de roles');
                mostrarToast('Error: No se encontró el selector de roles', 'error');
            }
        }
        
        // Función para eliminar usuario
        async function eliminarUsuario(idUsuario, nombreUsuario) {
            if (!confirm(`¿Estás seguro de eliminar al usuario "${nombreUsuario}"?\n\nEsta acción no se puede deshacer y eliminará todos los datos asociados al usuario.`)) {
                return;
            }
            
            const row = document.querySelector(`[data-user-id="${idUsuario}"]`);
            if (row) row.classList.add('loading');
            
            try {
                const response = await fetch('/admin/usuarios/eliminar', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
