            <div class="form-body">
                <form id="editarUsuarioForm">
                    <input type="hidden" id="idUsuario" value="<%= usuarioData.idUsuario %>">

                    <!-- Informaci√≥n B√°sica -->
                    <div class="form-section">
                        <h4 class="section-title">
