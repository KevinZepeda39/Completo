                editarReporte(reporteActual.idReporte);
            }
        }

        // Función para eliminar reporte
        function eliminarReporte(idReporte, titulo) {
            // Guardar información del reporte a eliminar
            window.reporteAEliminar = { id: idReporte, titulo: titulo };
            
            // Actualizar el modal con la información
            document.getElementById('reporteAEliminarTitulo').textContent = titulo;
            
            // Resetear el checkbox
            document.getElementById('confirmarEliminacion').checked = false;
            document.getElementById('btnConfirmarEliminar').disabled = true;
            
            // Mostrar el modal
            const modal = new bootstrap.Modal(document.getElementById('confirmarEliminarModal'));
            modal.show();
        }

        // Función para confirmar eliminación
        async function confirmarEliminacionReporte() {
            if (!window.reporteAEliminar) {
                mostrarToast('Error: No hay reporte seleccionado para eliminar', 'error');
                return;
            }

            try {
                mostrarLoading();
                
                const response = await fetch(`/admin/api/reportes/${window.reporteAEliminar.id}/eliminar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const data = await response.json();
                
                if (data.success) {
                    mostrarToast(`Reporte "${window.reporteAEliminar.titulo}" eliminado exitosamente`, 'success');
                    
                    // Cerrar el modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('confirmarEliminarModal'));
                    if (modal) modal.hide();
                    
                    // Limpiar la variable
                    window.reporteAEliminar = null;
                    
                    // Recargar la página después de un breve delay
                    setTimeout(() => location.reload(), 1500);
                } else {
                    mostrarToast(`Error al eliminar el reporte: ${data.error || 'Error desconocido'}`, 'error');
                }
            } catch (error) {
                console.error('Error eliminando reporte:', error);
                mostrarToast('Error de conexión al eliminar el reporte', 'error');
            } finally {
                ocultarLoading();
            }
        }

        // Funciones de filtrado
        function limpiarFiltros() {
            document.getElementById('filtroEstado').value = '';
            document.getElementById('filtroCategoria').value = '';
            document.getElementById('buscarReporte').value = '';
            filtrarReportes();
            mostrarToast('Filtros limpiados', 'info');
        }

        function filtrarReportes() {
            const filtroEstado = document.getElementById('filtroEstado').value.toLowerCase();
            const filtroCategoria = document.getElementById('filtroCategoria').value.toLowerCase();
            const busqueda = document.getElementById('buscarReporte').value.toLowerCase();
            
            const filas = document.querySelectorAll('#tablaReportes tbody tr');
            let reportesVisibles = 0;
            
            filas.forEach(fila => {
                if (fila.querySelector('td[colspan]')) return;
                
                const celdas = fila.children;
                const estado = celdas[5]?.textContent?.toLowerCase() || '';
                const categoria = celdas[2]?.textContent?.toLowerCase() || '';
                const titulo = celdas[1]?.textContent?.toLowerCase() || '';
                const ubicacion = celdas[4]?.textContent?.toLowerCase() || '';
                
                const coincideEstado = !filtroEstado || estado.includes(filtroEstado);
                const coincideCategoria = !filtroCategoria || categoria.includes(filtroCategoria);
                const coincideBusqueda = !busqueda || titulo.includes(busqueda) || ubicacion.includes(busqueda);
                
                if (coincideEstado && coincideCategoria && coincideBusqueda) {
                    fila.style.display = '';
                    reportesVisibles++;
                } else {
                    fila.style.display = 'none';
                }
            });
            
            // Mostrar mensaje si no hay resultados
            const tabla = document.getElementById('tablaReportes');
            let filaSinResultados = tabla.querySelector('.sin-resultados');
            
            if (reportesVisibles === 0 && (filtroEstado || filtroCategoria || busqueda)) {
                if (!filaSinResultados) {
                    filaSinResultados = document.createElement('tr');
                    filaSinResultados.className = 'sin-resultados';
                    filaSinResultados.innerHTML = `
                        <td colspan="9" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center">
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                    <i class="bi bi-search fs-1 text-muted"></i>
                                </div>
                                <h6 class="text-muted mb-2">No se encontraron resultados</h6>
                                <p class="text-muted mb-3">Intenta con otros criterios de búsqueda</p>
                                <button type="button" class="btn btn-outline-secondary" onclick="limpiarFiltros()">
                                    <i class="bi bi-eraser me-2"></i>
                                    Limpiar Filtros
                                </button>
                            </div>
                        </td>
                    `;
                    tabla.querySelector('tbody').appendChild(filaSinResultados);
                }
                filaSinResultados.style.display = '';
            } else if (filaSinResultados) {
                filaSinResultados.style.display = 'none';
            }
        }

        // Funciones placeholder
        function exportarReportes() {
            mostrarToast('Función de exportar en desarrollo. Se exportarán todos los reportes filtrados.', 'info');
        }

        function verMapaGeneral() {
            mostrarToast('Función de mapa general en desarrollo. Se mostrará un mapa con todos los reportes.', 'info');
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Filtros en tiempo real
            document.getElementById('filtroEstado')?.addEventListener('change', filtrarReportes);
            document.getElementById('filtroCategoria')?.addEventListener('change', filtrarReportes);
            document.getElementById('buscarReporte')?.addEventListener('input', filtrarReportes);
            
            // Checkbox para habilitar botón de eliminar
            document.getElementById('confirmarEliminacion')?.addEventListener('change', function() {
                document.getElementById('btnConfirmarEliminar').disabled = !this.checked;
            });

            // Event listener para botón de confirmar eliminación
            document.getElementById('btnConfirmarEliminar')?.addEventListener('click', confirmarEliminacionReporte);
            
            // Event listeners para botones de eliminar reporte
            const deleteButtons = document.querySelectorAll('.delete-reporte-btn');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const reporteId = this.getAttribute('data-reporte-id');
                    const reporteTitulo = this.getAttribute('data-reporte-titulo');
                    eliminarReporte(reporteId, reporteTitulo);
                });
            });
            
            // Formulario nuevo reporte
            document.getElementById('formNuevoReporte')?.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                try {
                    mostrarLoading();
                    const formData = new FormData(this);
                    
                    const response = await fetch('/admin/api/reportes/crear', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            titulo: formData.get('titulo'),
                            descripcion: formData.get('descripcion'),
                            categoria: formData.get('categoria'),
                            ubicacion: formData.get('ubicacion'),
                            latitud: formData.get('latitud'),
                            longitud: formData.get('longitud'),
                            prioridad: formData.get('prioridad'),
                            idUsuario: formData.get('idUsuario'),
                            responsable: formData.get('responsable'),
                            comentarios: formData.get('comentarios')
                        })
                    });
                    
                    const data = await response.json();
                    if (data.success) {
                        mostrarToast('Reporte creado exitosamente', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        mostrarToast('Error al crear el reporte: ' + data.error, 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    mostrarToast('Error al crear el reporte', 'error');
                } finally {
                    ocultarLoading();
                }
            });

            // Formulario editar reporte
            document.getElementById('formEditarReporte')?.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                try {
                    mostrarLoading();
                    const formData = new FormData(this);
                    const id = formData.get('id');
                    
                    const response = await fetch(`/admin/api/reportes/${id}/editar`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            titulo: formData.get('titulo'),
                            descripcion: formData.get('descripcion'),
                            categoria: formData.get('categoria'),
                            ubicacion: formData.get('ubicacion'),
                            latitud: formData.get('latitud'),
                            longitud: formData.get('longitud'),
                            prioridad: formData.get('prioridad'),
                            estado: formData.get('estado'),
                            responsable: formData.get('responsable'),
                            comentarios: formData.get('comentarios')
                        })
                    });
                    
                    const data = await response.json();
                    if (data.success) {
                        mostrarToast('Reporte actualizado exitosamente', 'success');
                        const modal = bootstrap.Modal.getInstance(document.getElementById('editarReporteModal'));
                        if (modal) modal.hide();
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        mostrarToast('Error al actualizar el reporte: ' + data.error, 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    mostrarToast('Error al actualizar el reporte', 'error');
                } finally {
                    ocultarLoading();
                }
            });
        });
    </script>
    
