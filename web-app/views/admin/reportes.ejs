                } else {
                    mostrarToast('Error al cargar el reporte para editar: ' + data.error, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                mostrarToast('Error al cargar el reporte para editar', 'error');
            } finally {
                ocultarLoading();
            }
        }

