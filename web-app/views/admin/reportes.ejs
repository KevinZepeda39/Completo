                            <h1 class="page-title">
                                <i class="bi bi-flag me-3"></i>
                                Gestión de Reportes
                            </h1>
                            <p class="page-subtitle">Administra y supervisa todos los reportes ciudadanos</p>
                        </div>
                        <div class="d-flex gap-2">
                            <!-- Botón de cambio de tema -->
                            <button type="button" class="btn btn-outline-secondary theme-toggle-btn" id="theme-toggle" title="Cambiar tema">
                                <i class="bi bi-moon-stars"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="location.reload()">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                Actualizar
                            </button>
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevoReporteModal">
                                <i class="bi bi-plus me-2"></i>
                                Nuevo Reporte
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon primary">
                            <i class="bi bi-flag"></i>
                        </div>
                        <div class="stat-number">
                            <% if (typeof reportes !== 'undefined' && reportes && reportes.length > 0) { %>
                                <%= reportes.length %>
                            <% } else { %>
                                0
                            <% } %>
                        </div>
                        <div class="stat-label">Total Reportes</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon warning">
                            <i class="bi bi-clock"></i>
                        </div>
                        <div class="stat-number">
                            <% if (typeof reportes !== 'undefined' && reportes && reportes.length > 0) { %>
                                <%= reportes.filter(r => r.estado === 'pendiente').length %>
                            <% } else { %>
                                0
                            <% } %>
                        </div>
                        <div class="stat-label">Pendientes</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon info">
                            <i class="bi bi-arrow-clockwise"></i>
                        </div>
                        <div class="stat-number">
                            <% if (typeof reportes !== 'undefined' && reportes && reportes.length > 0) { %>
                                <%= reportes.filter(r => r.estado === 'en-progreso').length %>
                            <% } else { %>
                                0
                            <% } %>
                        </div>
                        <div class="stat-label">En Progreso</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="stat-number">
                            <% if (typeof reportes !== 'undefined' && reportes && reportes.length > 0) { %>
                                <%= reportes.filter(r => r.estado === 'resuelto').length %>
                            <% } else { %>
                                0
                            <% } %>
                        </div>
                        <div class="stat-label">Resueltos</div>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="table-container">
                    <div class="p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-funnel text-primary me-2"></i>
                            <h6 class="mb-0 fw-semibold">Filtros de Búsqueda</h6>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="filtroEstado" class="form-label">Estado</label>
                                <select id="filtroEstado" class="form-select">
                                    <option value="">Todos los estados</option>
                                    <option value="pendiente">Pendiente</option>
                                    <option value="en-progreso">En Progreso</option>
                                    <option value="resuelto">Resuelto</option>
                                    <option value="rechazado">Rechazado</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="filtroCategoria" class="form-label">Categoría</label>
                                <select id="filtroCategoria" class="form-select">
                                    <option value="">Todas las categorías</option>
                                    <option value="infraestructura">Infraestructura</option>
                                    <option value="seguridad">Seguridad</option>
                                    <option value="servicios">Servicios Públicos</option>
                                    <option value="ambiente">Medio Ambiente</option>
                                    <option value="transporte">Transporte</option>
                                    <option value="salud">Salud</option>
                                    <option value="educacion">Educación</option>
                                    <option value="otro">Otro</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="buscarReporte" class="form-label">Buscar</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="bi bi-search text-muted"></i>
                                    </span>
                                    <input type="text" id="buscarReporte" class="form-control border-start-0" placeholder="Buscar por título, ubicación...">
                                </div>
                            </div>
                            <div class="col-md-2 mb-3">
                                <label class="form-label">&nbsp;</label>
                                <button type="button" class="btn btn-outline-secondary w-100" onclick="limpiarFiltros()">
                                    <i class="bi bi-eraser me-2"></i>
                                    Limpiar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabla de reportes -->
                <div class="table-container">
                    <div class="p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-table me-2"></i>
                                <span class="fw-semibold">Lista de Reportes</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="exportarReportes()">
                                    <i class="bi bi-download me-2"></i>
                                    Exportar
                                </button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="verMapaGeneral()">
                                    <i class="bi bi-map me-2"></i>
                                    Ver Mapa
                                </button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table mb-0" id="tablaReportes">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Título</th>
                                        <th>Categoría</th>
                                        <th>Usuario</th>
                                        <th>Ubicación</th>
                                        <th>Estado</th>
                                        <th>Prioridad</th>
                                        <th>Fecha</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof reportes !== 'undefined' && reportes.length > 0) { %>
                                        <% reportes.forEach(function(reporte) { %>
                                            <%
                                                // Valores por defecto seguros
                                                const prioridad = reporte.prioridad || 'media';
                                                const estado = reporte.estado || 'pendiente';
                                                const categoria = reporte.categoria || 'otro';
                                                const titulo = reporte.titulo || 'Sin título';
                                                const ubicacion = reporte.ubicacion || 'Sin ubicación';
                                                const usuarioNombre = reporte.usuarioNombre || reporte.usuarioEmail || 'Usuario Anónimo';
                                                const fechaCreacion = reporte.fechaCreacion ? new Date(reporte.fechaCreacion) : new Date();
                                                const idReporte = reporte.idReporte || reporte.id || 0;
                                            %>
                                            <tr data-reporte-id="<%= idReporte %>">
                                                <td>
                                                    <span class="fw-semibold text-primary">#<%= idReporte %></span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div>
                                                            <div class="fw-semibold text-dark"><%= titulo %></div>
                                                            <% if (reporte.imagenes && reporte.imagenes.length > 0) { %>
                                                                <small class="text-muted">
                                                                    <i class="bi bi-camera me-1"></i>
                                                                    <%= reporte.imagenes.length %> imagen(es)
                                                                </small>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary bg-gradient">
                                                        <%= categoria.charAt(0).toUpperCase() + categoria.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div>
                                                        <div class="fw-semibold text-dark"><%= usuarioNombre %></div>
                                                        <% if (reporte.usuarioEmail) { %>
                                                            <small class="text-muted"><%= reporte.usuarioEmail %></small>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="text-truncate" style="max-width: 200px;" title="<%= ubicacion %>">
                                                        <%= ubicacion %>
                                                    </div>
                                                    <% if (reporte.latitud && reporte.longitud) { %>
                                                        <small class="text-success">
                                                            <i class="bi bi-geo-alt-fill me-1"></i>
                                                            Geolocalizado
                                                        </small>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge badge-<%= estado %>">
                                                        <%= estado.charAt(0).toUpperCase() + estado.slice(1).replace('-', ' ') %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-<%= prioridad === 'alta' ? 'danger' : prioridad === 'media' ? 'warning' : 'success' %> bg-gradient">
                                                        <%= prioridad.charAt(0).toUpperCase() + prioridad.slice(1) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="fw-semibold text-dark">
                                                        <%= fechaCreacion.toLocaleDateString('es-SV') %>
                                                    </div>
                                                    <small class="text-muted">
                                                        <%= fechaCreacion.toLocaleTimeString('es-SV', { hour: '2-digit', minute: '2-digit' }) %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <button type="button" class="action-btn action-btn-view" 
                                                                onclick="verReporte(<%= idReporte %>)"
                                                                title="Ver detalles">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <a href="/admin/editar-reporte?id=<%= idReporte %>" class="action-btn action-btn-edit" 
                                                           title="Editar reporte">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <button type="button" class="action-btn action-btn-delete delete-reporte-btn" 
                                                                data-reporte-id="<%= idReporte %>"
                                                                data-reporte-titulo="<%= titulo.replace(/'/g, '\\\'') %>"
                                                                title="Eliminar reporte">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="9" class="text-center py-5">
                                                <div class="d-flex flex-column align-items-center">
                                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                                        <i class="bi bi-flag fs-1 text-muted"></i>
                                                    </div>
                                                    <h6 class="text-muted mb-2">No hay reportes disponibles</h6>
                                                    <p class="text-muted mb-3">Comienza creando el primer reporte del sistema</p>
                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nuevoReporteModal">
                                                        <i class="bi bi-plus me-2"></i>
                                                        Crear Primer Reporte
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal Nuevo Reporte -->
    <div class="modal fade" id="nuevoReporteModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-semibold">
                        <i class="bi bi-plus me-2"></i>
                        Crear Nuevo Reporte
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="formNuevoReporte">
                    <div class="modal-body p-4">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-12 mb-4">
                                        <label for="tituloReporte" class="form-label">
                                            <i class="bi bi-heading text-primary me-2"></i>
                                            Título del Reporte *
                                        </label>
                                        <input type="text" class="form-control" id="tituloReporte" name="titulo" required placeholder="Ingresa un título descriptivo...">
                                    </div>
                                    <div class="col-md-12 mb-4">
                                        <label for="descripcionReporte" class="form-label">
                                            <i class="bi bi-align-left text-primary me-2"></i>
                                            Descripción Detallada *
                                        </label>
                                        <textarea class="form-control" id="descripcionReporte" name="descripcion" rows="4" required placeholder="Describe el problema o situación en detalle..."></textarea>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label for="categoriaReporte" class="form-label">
                                            <i class="bi bi-tags text-primary me-2"></i>
                                            Categoría *
                                        </label>
                                        <select class="form-select" id="categoriaReporte" name="categoria" required>
                                            <option value="">Seleccionar categoría</option>
                                            <option value="infraestructura">🏗️ Infraestructura</option>
                                            <option value="seguridad">🛡️ Seguridad</option>
                                            <option value="servicios">🔧 Servicios Públicos</option>
                                            <option value="ambiente">🌱 Medio Ambiente</option>
                                            <option value="transporte">🚌 Transporte</option>
                                            <option value="salud">🏥 Salud</option>
                                            <option value="educacion">📚 Educación</option>
                                            <option value="otro">📋 Otro</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label for="prioridadReporte" class="form-label">
                                            <i class="bi bi-exclamation-triangle text-primary me-2"></i>
                                            Nivel de Prioridad
                                        </label>
                                        <select class="form-select" id="prioridadReporte" name="prioridad">
                                            <option value="baja">🟢 Baja</option>
                                            <option value="media" selected>🟡 Media</option>
                                            <option value="alta">🔴 Alta</option>
                                        </select>
                                    </div>
                                    <div class="col-md-12 mb-4">
                                        <label for="ubicacionReporte" class="form-label">
                                            <i class="bi bi-geo-alt text-primary me-2"></i>
                                            Ubicación *
                                        </label>
                                        <input type="text" class="form-control" id="ubicacionReporte" name="ubicacion" required placeholder="Dirección específica del incidente...">
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label for="latitudReporte" class="form-label">
                                            <i class="bi bi-globe text-primary me-2"></i>
                                            Latitud
                                        </label>
                                        <input type="number" step="any" class="form-control" id="latitudReporte" name="latitud" placeholder="13.7000">
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <label for="longitudReporte" class="form-label">
                                            <i class="bi bi-globe text-primary me-2"></i>
                                            Longitud
                                        </label>
                                        <input type="number" step="any" class="form-control" id="longitudReporte" name="longitud" placeholder="-89.2000">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="border rounded-3 p-3 bg-light">
                                    <h6 class="fw-semibold mb-3">
                                        <i class="bi bi-person-badge text-primary me-2"></i>
                                        Asignación
                                    </h6>
                                    <div class="mb-3">
                                        <label for="usuarioReporte" class="form-label">Usuario Asignado *</label>
                                        <select class="form-select" id="usuarioReporte" name="idUsuario" required>
                                            <option value="">Seleccionar usuario</option>
                                            <% if (typeof usuarios !== 'undefined' && usuarios.length > 0) { %>
                                                <% usuarios.forEach(function(usuario) { %>
                                                    <option value="<%= usuario.idUsuario %>"><%= usuario.nombre %> (<%= usuario.correo %>)</option>
                                                <% }); %>
                                            <% } %>
                                        </select>
                                        <small class="text-muted">El reporte será asignado a este usuario</small>
                                    </div>
                                    <div class="mb-3">
                                        <label for="responsableReporte" class="form-label">Responsable</label>
                                        <input type="text" class="form-control" id="responsableReporte" name="responsable" placeholder="Asignar a...">
                                    </div>
                                    <div class="mb-3">
                                        <label for="comentariosReporte" class="form-label">Comentarios Internos</label>
                                        <textarea class="form-control" id="comentariosReporte" name="comentarios" rows="3" placeholder="Notas para el equipo..."></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x me-2"></i>
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-2"></i>
                            Crear Reporte
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

