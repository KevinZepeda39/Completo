<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MiCiudadSV - Crear Cuenta</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ffc107;
            --secondary-color: #6c757d;
            --dark-bg: #1a1a1a;
            --darker-bg: #0d0d0d;
            --text-light: #ffffff;
            --text-muted: #b0b0b0;
            --accent-yellow: #ffc107;
            --accent-blue: #007bff;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: var(--dark-bg);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-light);
            overflow-x: hidden;
        }
        
        .main-container {
            display: flex;
            min-height: 100vh;
        }
        
        /* Lado izquierdo - Información */
        .info-side {
            flex: 1;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                        url('https://images.unsplash.com/photo-1449824913935-59a10b8d2000?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            position: relative;
        }
        
        .logo-section {
            text-align: center;
            margin-bottom: 40px;
        }
        
        .custom-logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 20px;
            background: var(--accent-yellow);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--dark-bg);
            font-weight: bold;
            box-shadow: 0 0 20px rgba(255, 193, 7, 0.5);
        }
        
        .logo-section h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: var(--text-light);
        }
        
        .logo-section p {
            font-size: 1.2rem;
            color: var(--text-muted);
        }
        
        .feature-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
            max-width: 400px;
        }
        
        .feature-card i {
            font-size: 3rem;
            color: var(--accent-yellow);
            margin-bottom: 20px;
        }
        
        .feature-card h4 {
            font-size: 1.5rem;
            margin-bottom: 15px;
            color: var(--text-light);
        }
        
        .feature-card p {
            font-size: 1rem;
            color: var(--text-muted);
            line-height: 1.6;
        }
        
        /* Lado derecho - Formulario */
        .form-side {
            flex: 1;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            border-radius: 20px 0 0 20px;
            box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
        }
        
        .form-container {
            width: 100%;
            max-width: 400px;
        }
        
        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .form-header i {
            font-size: 3rem;
            color: var(--accent-yellow);
            margin-bottom: 15px;
        }
        
        .form-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: var(--dark-bg);
        }
        
        .form-header p {
            color: var(--secondary-color);
            font-size: 1.1rem;
        }
        
        .form-floating {
            margin-bottom: 20px;
            position: relative;
        }
        
        .form-control {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 15px 20px;
            font-size: 1rem;
            color: var(--dark-bg);
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            background: white;
            border-color: var(--accent-yellow);
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
            color: var(--dark-bg);
        }
        
        .form-control::placeholder {
            color: var(--secondary-color);
        }
        
        .form-floating label {
            color: var(--secondary-color);
            padding: 15px 20px;
        }
        
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: var(--accent-yellow);
        }
        
        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--secondary-color);
            cursor: pointer;
            z-index: 10;
        }
        
        .password-toggle:hover {
            color: var(--accent-yellow);
        }
        
        .password-strength {
            margin-top: 10px;
            height: 4px;
            background: #e9ecef;
            border-radius: 2px;
            overflow: hidden;
        }
        
        .password-strength-bar {
            height: 100%;
            width: 0;
            transition: all 0.3s ease;
            border-radius: 2px;
        }
        
        .strength-weak { background: #dc3545; width: 25%; }
        .strength-fair { background: #ffc107; width: 50%; }
        .strength-good { background: #17a2b8; width: 75%; }
        .strength-strong { background: #28a745; width: 100%; }
        
        .form-check {
            margin-bottom: 20px;
        }
        
        .form-check-input {
            background-color: white;
            border: 2px solid #dee2e6;
            border-radius: 5px;
        }
        
        .form-check-input:checked {
            background-color: var(--accent-yellow);
            border-color: var(--accent-yellow);
        }
        
        .form-check-label {
            color: var(--secondary-color);
        }
        
        .form-check-label a {
            color: var(--accent-blue);
            text-decoration: none;
        }
        
        .form-check-label a:hover {
            text-decoration: underline;
        }
        
        .btn-registro {
            width: 100%;
            padding: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 15px;
            border: none;
            background: var(--accent-yellow);
            color: var(--dark-bg);
            transition: all 0.3s ease;
        }
        
        .btn-registro:hover {
            background: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(255, 193, 7, 0.3);
        }
        
        .login-link {
            text-align: center;
            margin-top: 20px;
        }
        
        .login-link a {
            color: var(--accent-blue);
            text-decoration: none;
            font-weight: 600;
        }
        
        .login-link a:hover {
            text-decoration: underline;
        }
        
        .copyright {
            text-align: center;
            margin-top: 30px;
            color: var(--secondary-color);
            font-size: 0.9rem;
        }
        
        /* Controles superiores */
        .top-controls {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .control-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-light);
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            cursor: pointer;
        }
        
        .control-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: scale(1.1);
        }
        
        /* Validación */
        .form-control.is-invalid {
            border-color: #dc3545;
        }
        
        .form-control.is-valid {
            border-color: #28a745;
        }
        
        .invalid-feedback {
            display: none;
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
        }
        
        .form-control.is-invalid ~ .invalid-feedback {
            display: block;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                flex-direction: column;
            }
            
            .info-side {
                min-height: 40vh;
                padding: 30px 20px;
            }
            
            .form-side {
                padding: 30px 20px;
            }
            
            .logo-section h1 {
                font-size: 2rem;
            }
            
            .custom-logo {
                width: 60px;
                height: 60px;
                font-size: 2rem;
            }
            
            .top-controls {
                top: 15px;
                right: 15px;
                gap: 8px;
            }
            
            .control-btn {
                width: 40px;
                height: 40px;
            }
        }
    </style>
</head>
<body>
    <!-- Controles superiores -->
    <div class="top-controls">
        <button class="control-btn" id="themeToggle" title="Cambiar tema">
            <i class="fas fa-cog"></i>
        </button>
        <button class="control-btn" id="languageToggle" title="Cambiar idioma">
            <span>EN</span>
        </button>
    </div>

    <div class="main-container">
        <!-- Lado izquierdo - Información -->
        <div class="info-side">
            <div class="logo-section">
                <div class="custom-logo">
                    M
                </div>
                <h1>MiCiudadSV</h1>
                <p>Tu plataforma ciudadana digital</p>
            </div>

            <div class="feature-card">
                <i class="fas fa-users"></i>
                <h4>Comunidad Conectada</h4>
                <p>Únete a miles de ciudadanos comprometidos con el desarrollo de El Salvador</p>
            </div>
        </div>

        <!-- Lado derecho - Formulario -->
        <div class="form-side">
            <div class="form-container">
                <div class="form-header">
                    <i class="fas fa-user-plus"></i>
                    <h2>Crear Cuenta</h2>
                    <p>Únete a nuestra comunidad digital</p>
                </div>

                <form method="POST" action="/auth/registro" id="registroForm" novalidate>
                    <div class="form-floating">
                        <input
                            type="text"
                            class="form-control"
                            id="nombre"
                            name="nombre"
                            placeholder="Nombre completo"
                            required
                            minlength="2"
                            maxlength="200"
                        >
                        <label for="nombre">
                            <i class="fas fa-user me-2"></i>
                            Nombre completo
                        </label>
                        <div class="invalid-feedback">
                            El nombre debe tener entre 2 y 200 caracteres.
                        </div>
                    </div>

                    <div class="form-floating">
                        <input
                            type="email"
                            class="form-control"
                            id="correo"
                            name="correo"
                            placeholder="nombre@ejemplo.com"
                            required
                        >
                        <label for="correo">
                            <i class="fas fa-envelope me-2"></i>
                            Correo electrónico
                        </label>
                        <div class="invalid-feedback">
                            Por favor, ingresa un correo válido.
                        </div>
                    </div>

                    <div class="form-floating position-relative">
                        <input
                            type="password"
                            class="form-control"
                            id="contraseña"
                            name="contraseña"
                            placeholder="Ingresa una contraseña"
                            required
                            minlength="6"
                        >
                        <label for="contraseña">
                            <i class="fas fa-lock me-2"></i>
                            Contraseña
                        </label>
                        <button type="button" class="password-toggle" onclick="togglePassword('contraseña', 'toggleIcon1')">
                            <i class="fas fa-eye" id="toggleIcon1"></i>
                        </button>
                        <div class="password-strength">
                            <div class="password-strength-bar" id="strengthBar"></div>
                        </div>
                        <small class="text-muted" id="strengthText">Ingresa una contraseña</small>
                    </div>

                    <div class="form-floating position-relative">
                        <input
                            type="password"
                            class="form-control"
                            id="confirmar_contraseña"
                            name="confirmar_contraseña"
                            placeholder="Confirmar contraseña"
                            required
                        >
                        <label for="confirmar_contraseña">
                            <i class="fas fa-lock me-2"></i>
                            Confirmar contraseña
                        </label>
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmar_contraseña', 'toggleIcon2')">
                            <i class="fas fa-eye" id="toggleIcon2"></i>
                        </button>
                        <div class="invalid-feedback">
                            Las contraseñas no coinciden.
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="terminos" name="terminos" required>
                        <label class="form-check-label" for="terminos">
                            Acepto los <a href="/informacion" target="_blank">términos y condiciones</a> y la <a href="/informacion" target="_blank">política de privacidad</a>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-registro">
                        <i class="fas fa-user-plus me-2"></i>
                        Crear Cuenta
                    </button>
                </form>

                <div class="login-link">
                    <p class="text-muted">
                        ¿Ya tienes una cuenta? 
                        <a href="/auth/login">Inicia sesión aquí</a>
                    </p>
                </div>

                <div class="copyright">
                    © 2025 MiCiudadSV. Todos los derechos reservados.
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle password visibility
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
        
        // Password strength checker
        function checkPasswordStrength(password) {
            let strength = 0;
            let text = '';
            let className = '';
            
            if (password.length >= 6) strength++;
            if (password.match(/[a-z]+/)) strength++;
            if (password.match(/[A-Z]+/)) strength++;
            if (password.match(/[0-9]+/)) strength++;
            if (password.match(/[^a-zA-Z0-9]+/)) strength++;
            
            switch (strength) {
                case 0:
                case 1:
                    text = 'Muy débil';
                    className = 'strength-weak';
                    break;
                case 2:
                    text = 'Débil';
                    className = 'strength-fair';
                    break;
                case 3:
                    text = 'Buena';
                    className = 'strength-good';
                    break;
                case 4:
                case 5:
                    text = 'Fuerte';
                    className = 'strength-strong';
                    break;
            }
            
            return { strength, text, className };
        }
        
        // Form validation and loading state
        document.getElementById('registroForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const btnSpan = submitBtn.querySelector('i');
            const btnText = submitBtn.textContent;
            
            // Show loading state
            btnSpan.className = 'fas fa-spinner fa-spin me-2';
            submitBtn.textContent = 'Creando cuenta...';
            submitBtn.disabled = true;
            
            // Basic validation
            const password = document.getElementById('contraseña').value;
            const confirmPassword = document.getElementById('confirmar_contraseña').value;
            const terms = document.getElementById('terminos').checked;
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Las contraseñas no coinciden');
                submitBtn.innerHTML = '<i class="fas fa-user-plus me-2"></i>Crear Cuenta';
                submitBtn.disabled = false;
                return false;
            }
            
            if (!terms) {
                e.preventDefault();
                alert('Debes aceptar los términos y condiciones');
                submitBtn.innerHTML = '<i class="fas fa-user-plus me-2"></i>Crear Cuenta';
                submitBtn.disabled = false;
                return false;
            }
            
            // Form is valid, let it submit
        });
        
        // Password strength indicator
        document.getElementById('contraseña').addEventListener('input', function() {
            const password = this.value;
            const strengthBar = document.getElementById('strengthBar');
            const strengthText = document.getElementById('strengthText');
            
            if (password.length === 0) {
                strengthBar.className = 'password-strength-bar';
                strengthText.textContent = 'Ingresa una contraseña';
                strengthText.className = 'text-muted';
                return;
            }
            
            const result = checkPasswordStrength(password);
            strengthBar.className = 'password-strength-bar ' + result.className;
            strengthText.textContent = 'Seguridad: ' + result.text;
            
            if (result.strength <= 2) {
                strengthText.className = 'text-danger';
            } else if (result.strength === 3) {
                strengthText.className = 'text-warning';
            } else {
                strengthText.className = 'text-success';
            }
        });
        
        // Password confirmation validation
        document.getElementById('confirmar_contraseña').addEventListener('input', function() {
            const password = document.getElementById('contraseña').value;
            const confirmPassword = this.value;
            
            if (confirmPassword.length > 0) {
                if (password === confirmPassword) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            } else {
                this.classList.remove('is-valid', 'is-invalid');
            }
        });
        
        // Auto-focus first input
        document.getElementById('nombre').focus();
    </script>
</body>
</html>

