   <script src="/js/theme-switcher.js"></script>
   
   <script>
       // Funci√≥n para aplicar tema
       function applyTheme(theme) {
           document.documentElement.setAttribute('data-theme', theme);
           localStorage.setItem('theme', theme);
       }

       // Funci√≥n para obtener tema guardado
       function getSavedTheme() {
           return localStorage.getItem('theme') || 'light';
       }

       // Aplicar tema al cargar
       document.addEventListener('DOMContentLoaded', function() {
           const savedTheme = getSavedTheme();
           applyTheme(savedTheme);
           
           // Actualizar icono del bot√≥n de tema
           const themeToggle = document.getElementById('theme-toggle');
           if (themeToggle) {
               const icon = themeToggle.querySelector('i');
               if (savedTheme === 'dark') {
                   icon.className = 'bi bi-sun';
                   themeToggle.title = 'Cambiar a modo claro';
               } else {
                   icon.className = 'bi bi-moon-stars';
                   themeToggle.title = 'Cambiar a modo oscuro';
               }
           }
       });

       // Event listener para el bot√≥n de cambio de tema
       const themeToggle = document.getElementById('theme-toggle');
       if (themeToggle) {
           themeToggle.addEventListener('click', function() {
               const currentTheme = getSavedTheme();
               const newTheme = currentTheme === 'light' ? 'dark' : 'light';
               applyTheme(newTheme);
               
               // Actualizar icono
               const icon = this.querySelector('i');
               if (newTheme === 'dark') {
                   icon.className = 'bi bi-sun';
                   this.title = 'Cambiar a modo claro';
               } else {
                   icon.className = 'bi bi-moon-stars';
                   this.title = 'Cambiar a modo oscuro';
               }
           });
       }
   </script>
   
