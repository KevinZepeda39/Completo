                                        <span class="stat-number" id="totalMensajes"><%= estadisticas.totalMensajes || 0 %></span>
                                        <div class="stat-label">Mensajes hoy</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <span class="stat-number" id="usuariosActivos"><%= estadisticas.usuariosActivos || 0 %></span>
                                        <div class="stat-label">Usuarios activos</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-item">
                                        <span class="stat-number online-indicator">●</span>
                                        <div class="stat-label">En línea</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <!-- Área de Mensajes -->
        <div class="messages-area" id="messagesArea">
            <% if (comentarios && comentarios.length > 0) { %>
                <% comentarios.forEach(function(comentario) { %>
                <div class="message <%= loggedIn && usuario && comentario.autorId === usuario.id ? 'own' : '' %>" data-id="<%= comentario.id %>">
                    <div class="message-bubble">
                        <div class="message-header">
                            <span class="message-author"><%= comentario.autorNombre || 'Usuario Anónimo' %></span>
                            <span class="message-time">
                                <%= new Date(comentario.fechaCreacion).toLocaleTimeString('es-ES', {
                                    hour: '2-digit',
                                    minute: '2-digit'
                                }) %>
                            </span>
                        </div>
                        <div class="message-content"><%= comentario.comentario %></div>
                    </div>
                </div>
                <% }); %>
            <% } else { %>
            <div class="chat-empty" id="chatEmpty">
                <div class="empty-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <h3>¡Inicia la conversación!</h3>
                <p>Sé el primero en enviar un mensaje al chat global de MiCiudadSV</p>
            </div>
            <% } %>
            
            <div class="typing-indicator" id="typingIndicator">
                Alguien está escribiendo<span class="typing-dots"></span>
            </div>
        </div>

        <!-- Área de Input -->
        <% if (loggedIn) { %>
        <div class="message-input-area">
            <form action="/comunidades/chat/global/enviar" method="POST" id="messageForm">
                <div class="input-group">
                    <textarea class="form-control message-input" 
                              id="messageInput"
                              name="comentario" 
                              placeholder="Escribe tu mensaje..."
                              rows="1"
                              maxlength="500"
                              required></textarea>
                    <button class="btn send-button" type="submit" id="sendButton">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </form>
            <div class="text-center mt-2">
                <small class="text-muted">
                    <span id="charCounter">0/500</span> caracteres • 
                    Presiona Enter para enviar, Shift+Enter para nueva línea
                </small>
            </div>
        </div>
        <% } else { %>
        <div class="message-input-area">
            <div class="text-center">
                <p class="text-muted mb-3">
                    <i class="fas fa-lock me-2"></i>
                    Debes iniciar sesión para participar en el chat
                </p>
                <a href="/auth/login" class="btn btn-primary me-2">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Iniciar Sesión
                </a>
                <a href="/auth/registro" class="btn btn-outline-primary">
                    <i class="fas fa-user-plus me-2"></i>
                    Registrarse
                </a>
            </div>
        </div>
        <% } %>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Variables globales
        let lastMessageId = 0;
        let isScrolledToBottom = true;
        let typingTimeout;
        let refreshInterval;
        
        // Inicialización
        document.addEventListener('DOMContentLoaded', function() {
            initializeChat();
            setupMessageInput();
            setupAutoScroll();
            startMessagePolling();
            
            // Auto-dismiss alertas
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
        
        // Inicializar chat
        function initializeChat() {
            const messagesArea = document.getElementById('messagesArea');
            const messages = messagesArea.querySelectorAll('.message');
            
            if (messages.length > 0) {
                lastMessageId = Math.max(...Array.from(messages).map(msg => 
                    parseInt(msg.dataset.id) || 0
                ));
                document.getElementById('chatEmpty')?.remove();
            }
            
            scrollToBottom(false);
        }
        
        // Configurar input de mensajes
        function setupMessageInput() {
            const messageInput = document.getElementById('messageInput');
            const messageForm = document.getElementById('messageForm');
            const charCounter = document.getElementById('charCounter');
            const sendButton = document.getElementById('sendButton');
            
            if (!messageInput) return;
            
            // Contador de caracteres
            messageInput.addEventListener('input', function() {
                const count = this.value.length;
                charCounter.textContent = `${count}/500`;
                
                if (count > 450) {
                    charCounter.style.color = '#dc3545';
                } else {
                    charCounter.style.color = '#6c757d';
                }
                
                // Ajustar altura del textarea
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 120) + 'px';
                
                // Habilitar/deshabilitar botón
                sendButton.disabled = !this.value.trim();
            });
            
            // Manejar Enter
            messageInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    if (this.value.trim()) {
                        messageForm.submit();
                    }
                }
            });
            
            // Envío del formulario
            messageForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const message = messageInput.value.trim();
                if (!message) return;
                
                // Deshabilitar input temporalmente
                messageInput.disabled = true;
                sendButton.disabled = true;
                sendButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                
                // Enviar mensaje
                fetch('/comunidades/chat/global/enviar', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `comentario=${encodeURIComponent(message)}`
                })
                .then(response => {
                    if (response.ok) {
                        messageInput.value = '';
                        messageInput.style.height = 'auto';
                        charCounter.textContent = '0/500';
                        charCounter.style.color = '#6c757d';
                        
                        // Obtener mensajes nuevos inmediatamente
                        setTimeout(fetchNewMessages, 500);
                    } else {
                        throw new Error('Error enviando mensaje');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error enviando el mensaje. Intenta de nuevo.');
                })
                .finally(() => {
                    messageInput.disabled = false;
                    sendButton.disabled = false;
                    sendButton.innerHTML = '<i class="fas fa-paper-plane"></i>';
                    messageInput.focus();
                });
            });
            
            // Focus inicial
            messageInput.focus();
        }
        
        // Configurar auto-scroll
        function setupAutoScroll() {
            const messagesArea = document.getElementById('messagesArea');
            
            messagesArea.addEventListener('scroll', function() {
                const threshold = 100;
                isScrolledToBottom = (
                    this.scrollHeight - this.clientHeight - this.scrollTop
                ) <= threshold;
            });
        }
        
        // Scroll al final
        function scrollToBottom(smooth = true) {
            const messagesArea = document.getElementById('messagesArea');
            const scrollOptions = {
                top: messagesArea.scrollHeight,
                behavior: smooth ? 'smooth' : 'auto'
            };
            messagesArea.scrollTo(scrollOptions);
        }
        
        // Obtener mensajes nuevos
        async function fetchNewMessages() {
            try {
                const response = await fetch(`/comunidades/api/chat/mensajes?desde=${getLastMessageTime()}`);
                const data = await response.json();
                
                if (data.success && data.mensajes.length > 0) {
                    addNewMessages(data.mensajes);
                    updateConnectionStatus(true);
                }
            } catch (error) {
                console.error('Error obteniendo mensajes:', error);
                updateConnectionStatus(false);
            }
        }
        
        // Agregar mensajes nuevos
        function addNewMessages(messages) {
            const messagesArea = document.getElementById('messagesArea');
            const chatEmpty = document.getElementById('chatEmpty');
            
            if (chatEmpty) {
                chatEmpty.remove();
            }
            
            messages.forEach(message => {
                if (message.id > lastMessageId) {
                    const messageElement = createMessageElement(message);
                    messagesArea.appendChild(messageElement);
                    lastMessageId = Math.max(lastMessageId, message.id);
                }
            });
            
            if (isScrolledToBottom) {
                scrollToBottom();
            }
            
            // Actualizar estadísticas
            updateStats();
        }
        
        // Crear elemento de mensaje
        function createMessageElement(message) {
            const messageDiv = document.createElement('div');
            const isOwn = <%= loggedIn && usuario ? `${usuario.id} === message.autorId` : 'false' %>;
            
            messageDiv.className = `message new-message ${isOwn ? 'own' : ''}`;
            messageDiv.dataset.id = message.id;
            
            const time = new Date(message.fechaCreacion).toLocaleTimeString('es-ES', {
                hour: '2-digit',
                minute: '2-digit'
            });
            
            messageDiv.innerHTML = `
                <div class="message-bubble">
                    <div class="message-header">
                        <span class="message-author">${message.autorNombre || 'Usuario Anónimo'}</span>
                        <span class="message-time">${time}</span>
                    </div>
                    <div class="message-content">${message.comentario}</div>
                </div>
            `;
            
            return messageDiv;
        }
        
        // Obtener timestamp del último mensaje
        function getLastMessageTime() {
            const messages = document.querySelectorAll('.message');
            if (messages.length === 0) return '';
            
            // Usar timestamp actual menos 1 minuto como fallback
            const oneMinuteAgo = new Date(Date.now() - 60000).toISOString();
            return oneMinuteAgo;
        }
        
        // Actualizar estado de conexión
        function updateConnectionStatus(online) {
            const status = document.getElementById('connectionStatus');
            const onlineIndicator = document.querySelector('.online-indicator');
            
            if (online) {
                status.className = 'connection-status online';
                status.innerHTML = '<i class="fas fa-circle me-1"></i>En línea';
                if (onlineIndicator) {
                    onlineIndicator.style.color = '#28a745';
                }
            } else {
                status.className = 'connection-status offline';
                status.innerHTML = '<i class="fas fa-circle me-1"></i>Desconectado';
                if (onlineIndicator) {
                    onlineIndicator.style.color = '#dc3545';
                }
            }
        }
        
        // Actualizar estadísticas
        function updateStats() {
            const totalMensajes = document.querySelectorAll('.message').length;
            const totalMensajesElement = document.getElementById('totalMensajes');
            
            if (totalMensajesElement) {
                totalMensajesElement.textContent = totalMensajes;
            }
        }
        
        // Iniciar polling de mensajes
        function startMessagePolling() {
            // Fetch inmediato
            fetchNewMessages();
            
            // Polling cada 3 segundos
            refreshInterval = setInterval(fetchNewMessages, 3000);
        }
        
        // Limpiar al salir
        window.addEventListener('beforeunload', function() {
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
        });
        
        // Manejar visibilidad de la página
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                // Parar polling cuando la página no es visible
                if (refreshInterval) {
                    clearInterval(refreshInterval);
                }
            } else {
                // Reanudar polling cuando la página es visible
                startMessagePolling();
                scrollToBottom();
            }
        });
    </script>
    
    <!-- Sistema de Temas -->
    <script src="/js/theme-switcher.js"></script>
    
    <script>
        // Función para aplicar tema
        function applyTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }

        // Función para obtener tema guardado
        function getSavedTheme() {
            return localStorage.getItem('theme') || 'light';
        }

        // Aplicar tema al cargar
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = getSavedTheme();
            applyTheme(savedTheme);
            
            // Actualizar icono del botón de tema
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                const icon = themeToggle.querySelector('i');
                if (savedTheme === 'dark') {
                    icon.className = 'bi bi-sun';
                    themeToggle.title = 'Cambiar a modo claro';
                } else {
                    icon.className = 'bi bi-moon-stars';
                    themeToggle.title = 'Cambiar a modo oscuro';
                }
            }
        });

        // Event listener para el botón de cambio de tema
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle) {
            themeToggle.addEventListener('click', function() {
                const currentTheme = getSavedTheme();
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                applyTheme(newTheme);
                
                // Actualizar icono
                const icon = this.querySelector('i');
                if (newTheme === 'dark') {
                    icon.className = 'bi bi-sun';
                    this.title = 'Cambiar a modo claro';
                } else {
                    icon.className = 'bi bi-moon-stars';
                    this.title = 'Cambiar a modo oscuro';
                }
            });
        }
    </script>
    
    
    <!-- Ancla para scroll -->
    <div id="bottom"></div>
</body>
</html>