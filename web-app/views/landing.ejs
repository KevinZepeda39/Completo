    <script>
        // Cargar tema guardado
        document.addEventListener('DOMContentLoaded', function() {

            // Auto-hide welcome message after 5 seconds
            const welcomeMessage = document.querySelector('.welcome-message');
            if (welcomeMessage) {
                setTimeout(() => {
                    welcomeMessage.style.transition = 'all 0.5s ease';
                    welcomeMessage.style.opacity = '0';
                    welcomeMessage.style.transform = 'translateY(-20px)';
                    setTimeout(() => {
                        welcomeMessage.remove();
                    }, 500);
                }, 5000);
            }

            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Animaci√≥n de contador para estad√≠sticas
            function animateCounter(element, target, duration = 2000) {
                let start = 0;
                const increment = target / (duration / 16);
                
                function updateCounter() {
                    start += increment;
                    if (start < target) {
                        element.textContent = Math.floor(start);
                        requestAnimationFrame(updateCounter);
                    } else {
                        element.textContent = target;
                    }
                }
                
                updateCounter();
            }

            // Observador de intersecci√≥n para animaciones
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate-on-scroll');
                        
                        // Si es una tarjeta de estad√≠sticas, animar el contador
                        const statNumber = entry.target.querySelector('.stat-number');
                        if (statNumber) {
                            const target = parseInt(statNumber.getAttribute('data-count'));
                            animateCounter(statNumber, target);
                        }
                    }
                });
            }, observerOptions);

            // Observar elementos para animaci√≥n
            document.querySelectorAll('.stat-card, .step-card, .testimonial-card, .alert-card').forEach(el => {
                observer.observe(el);
            });

            // Efecto parallax en el hero
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const heroSection = document.querySelector('.hero-section');
                if (heroSection) {
                    heroSection.style.transform = `translateY(${scrolled * 0.5}px)`;
                }
            });

            // Efecto de aparici√≥n gradual para las tarjetas de caracter√≠sticas
            const featureCards = document.querySelectorAll('.feature-card');
            featureCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                card.classList.add('animate-on-scroll');
            });

        // Newsletter form
        const newsletterForm = document.querySelector('.newsletter-form');
        if (newsletterForm) {
            newsletterForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const input = this.querySelector('.newsletter-input');
                const btn = this.querySelector('.newsletter-btn');
                
                if (input.value.trim()) {
                    btn.innerHTML = '‚úì Enviado';
                    btn.style.background = 'var(--success)';
                    input.value = '';
                    
                    setTimeout(() => {
                        btn.innerHTML = 'Enviar';
                        btn.style.background = 'var(--primary)';
                    }, 2000);
                }
            });
        }

            // Bot√≥n de suscripci√≥n a alertas
            const subscribeBtn = document.querySelector('.cta-section .btn-primary');
            if (subscribeBtn) {
                subscribeBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    this.innerHTML = '‚úì Suscrito';
                    this.style.background = '#28a745';
                    
                    setTimeout(() => {
                        this.innerHTML = 'Suscribirse';
                        this.style.background = 'var(--primary)';
                    }, 2000);
                });
            }

            // Efecto hover en las tarjetas de alertas
            const alertCards = document.querySelectorAll('.alert-card');
            alertCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.borderLeftColor = '#ffc107';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.borderLeftColor = 'var(--primary)';
                });
            });

            // Animaci√≥n de las ondas en el CTA
            const ctaSection = document.querySelector('.cta-section');
            if (ctaSection) {
                let waveOffset = 0;
                setInterval(() => {
                    waveOffset += 1;
                    ctaSection.style.setProperty('--wave-offset', waveOffset + 'px');
                }, 50);
            }
        });

        <% if (loggedIn) { %>
            // Actualizar estad√≠sticas en tiempo real para usuarios logueados
            setInterval(() => {
                console.log('Usuario logueado: <%= usuario.nombre %>');
            }, 30000);
        <% } %>
    </script>
    
