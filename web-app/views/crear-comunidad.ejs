    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Variables globales
        let tags = [];
        
        // Cargar tags existentes si hay formData
        <% if (typeof formData !== 'undefined' && formData.tags) { %>
        tags = '<%= formData.tags %>'.split(',').map(tag => tag.trim()).filter(tag => tag);
        renderTags();
        updateTagsInput();
        <% } %>
        
        // Contadores de caracteres
        function setupCharacterCounters() {
            const titulo = document.getElementById('titulo');
            const descripcion = document.getElementById('descripcion');
            const tituloCounter = document.getElementById('titulo-counter');
            const descripcionCounter = document.getElementById('descripcion-counter');
            
            function updateTituloCounter() {
                const count = titulo.value.length;
                tituloCounter.textContent = `${count}/100`;
                if (count > 80) tituloCounter.style.color = '#dc3545';
                else tituloCounter.style.color = '#6c757d';
                updatePreview();
            }
            
            function updateDescripcionCounter() {
                const count = descripcion.value.length;
                descripcionCounter.textContent = `${count}/500`;
                if (count > 450) descripcionCounter.style.color = '#dc3545';
                else descripcionCounter.style.color = '#6c757d';
                updatePreview();
            }
            
            titulo.addEventListener('input', updateTituloCounter);
            descripcion.addEventListener('input', updateDescripcionCounter);
            
            // Inicializar contadores
            updateTituloCounter();
            updateDescripcionCounter();
        }
        
        // Sistema de tags
        function setupTags() {
            const tagInput = document.getElementById('tagInput');
            const tagsContainer = document.getElementById('tagsContainer');
            
            tagInput.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ',') {
                    e.preventDefault();
                    addTag(this.value.trim());
                    this.value = '';
                }
                
                if (e.key === 'Backspace' && this.value === '' && tags.length > 0) {
                    removeTag(tags.length - 1);
                }
            });
            
            tagInput.addEventListener('blur', function() {
                if (this.value.trim()) {
                    addTag(this.value.trim());
                    this.value = '';
                }
            });
            
            tagsContainer.addEventListener('click', function() {
                tagInput.focus();
            });
        }
        
        function addTag(tagText) {
            if (!tagText || tags.length >= 5) return;
            
            // Limpiar y validar tag
            tagText = tagText.toLowerCase().replace(/[^a-zA-Z0-9√°√©√≠√≥√∫√±\-]/g, '');
            
            if (tagText.length < 2 || tags.includes(tagText)) return;
            
            tags.push(tagText);
            renderTags();
            updateTagsInput();
            updatePreview();
        }
        
        function removeTag(index) {
            tags.splice(index, 1);
            renderTags();
            updateTagsInput();
            updatePreview();
        }
        
        function renderTags() {
            const tagsContainer = document.getElementById('tagsContainer');
            const tagInput = document.getElementById('tagInput');
            
            // Limpiar tags existentes
            const existingTags = tagsContainer.querySelectorAll('.tag-item');
            existingTags.forEach(tag => tag.remove());
            
            // Agregar tags
            tags.forEach((tag, index) => {
                const tagElement = document.createElement('span');
                tagElement.className = 'tag-item';
                tagElement.innerHTML = `
                    #${tag}
                    <span class="tag-remove" onclick="removeTag(${index})">√ó</span>
                `;
                tagsContainer.insertBefore(tagElement, tagInput);
            });
        }
        
        function updateTagsInput() {
            document.getElementById('tagsHidden').value = tags.join(',');
        }
        
        // Vista previa
        function updatePreview() {
            const titulo = document.getElementById('titulo').value || 'Nombre de tu comunidad';
            const descripcion = document.getElementById('descripcion').value || 'La descripci√≥n aparecer√° aqu√≠...';
            const categoria = document.querySelector('input[name="categoria"]:checked');
            
            document.getElementById('previewTitulo').textContent = titulo;
            document.getElementById('previewDescripcion').textContent = descripcion;
            
            const previewCategory = document.getElementById('previewCategory');
            if (categoria) {
                const categoryData = getCategoryData(categoria.value);
                previewCategory.innerHTML = `<span class="badge bg-primary">${categoryData.emoji} ${categoryData.name}</span>`;
                previewCategory.style.display = 'block';
            } else {
                previewCategory.style.display = 'none';
            }
            
            const previewTags = document.getElementById('previewTags');
            if (tags.length > 0) {
                previewTags.innerHTML = tags.map(tag => 
                    `<span class="badge bg-light text-primary me-1">#${tag}</span>`
                ).join('');
                previewTags.style.display = 'block';
            } else {
                previewTags.style.display = 'none';
            }
        }
        
        function getCategoryData(category) {
            const categories = {
                'tecnologia': { emoji: 'üíª', name: 'Tecnolog√≠a' },
                'deportes': { emoji: '‚öΩ', name: 'Deportes' },
                'cultura': { emoji: 'üé®', name: 'Cultura' },
                'educacion': { emoji: 'üìö', name: 'Educaci√≥n' },
                'salud': { emoji: 'üè•', name: 'Salud' },
                'general': { emoji: 'üìã', name: 'General' }
            };
            return categories[category] || categories['general'];
        }
        
        // Validaci√≥n del formulario
        function validateForm() {
            const titulo = document.getElementById('titulo').value.trim();
            const descripcion = document.getElementById('descripcion').value.trim();
            const categoria = document.querySelector('input[name="categoria"]:checked');
            
            if (!titulo || titulo.length < 3) {
                alert('El nombre de la comunidad debe tener al menos 3 caracteres.');
                document.getElementById('titulo').focus();
                return false;
            }
            
            if (!descripcion || descripcion.length < 10) {
                alert('La descripci√≥n debe tener al menos 10 caracteres.');
                document.getElementById('descripcion').focus();
                return false;
            }
            
            if (!categoria) {
                alert('Por favor selecciona una categor√≠a.');
                return false;
            }
            
            return true;
        }
        
        // Event listeners
        // Funci√≥n para limpiar errores
        function clearErrors() {
            document.querySelectorAll('.alert').forEach(alert => {
                alert.remove();
            });
            document.querySelectorAll('.is-invalid').forEach(field => {
                field.classList.remove('is-invalid');
            });
        }
        
        // Funci√≥n para mostrar alertas
        function showAlert(type, message) {
            const alertContainer = document.querySelector('.container .row .col-lg-8');
            const alertHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            alertContainer.insertAdjacentHTML('afterbegin', alertHTML);
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        document.addEventListener('DOMContentLoaded', function() {
            setupCharacterCounters();
            setupTags();
            
            // Actualizar vista previa cuando cambie la categor√≠a
            document.querySelectorAll('input[name="categoria"]').forEach(radio => {
                radio.addEventListener('change', updatePreview);
            });
            
            // Manejo del formulario
            document.getElementById('comunidadForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                if (!validateForm()) {
                    return;
                }
                
                const submitButton = document.querySelector('button[type="submit"]');
                const originalText = submitButton.innerHTML;
                
                try {
                    // Deshabilitar bot√≥n y mostrar cargando
                    submitButton.disabled = true;
                    submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creando...';
                    
                    // Limpiar errores anteriores
                    clearErrors();
                    
                    // Obtener datos del formulario
                    const formData = new FormData(this);
                    
                    // Enviar datos
                    const response = await fetch('/comunidades/crear', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            titulo: formData.get('titulo'),
                            descripcion: formData.get('descripcion'),
                            categoria: formData.get('categoria'),
                            tags: formData.get('tags')
                        })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        // Mostrar mensaje de √©xito
                        showAlert('success', result.message);
                        
                        // Redirigir despu√©s de 1 segundo
                        setTimeout(() => {
                            window.location.href = result.redirect || '/comunidades';
                        }, 1000);
                    } else {
                        // Mostrar error
                        showAlert('danger', result.error || 'Error al crear la comunidad');
                    }
                    
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('danger', 'Error de conexi√≥n. Int√©ntalo de nuevo.');
                } finally {
                    // Restaurar bot√≥n
                    submitButton.disabled = false;
                    submitButton.innerHTML = originalText;
                }
            });
            
            // Auto-dismiss alertas
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
            
            // Inicializar vista previa
            updatePreview();
        });
    </script>
    
