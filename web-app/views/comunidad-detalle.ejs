    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss alertas
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
            
            // Contador de caracteres para comentarios
            const textarea = document.getElementById('comentarioTextarea');
            const charCount = document.getElementById('charCount');
            
            if (textarea && charCount) {
                textarea.addEventListener('input', function() {
                    const count = this.value.length;
                    charCount.textContent = count;
                    
                    // Cambiar color seg√∫n el l√≠mite
                    if (count > 900) {
                        charCount.style.color = '#dc3545'; // Rojo
                    } else if (count > 800) {
                        charCount.style.color = '#ffc107'; // Amarillo
                    } else {
                        charCount.style.color = '#6c757d'; // Normal
                    }
                });
            }
            
            // Manejo del formulario de salir de la comunidad
            const salirForm = document.getElementById('salirComunidadForm');
            if (salirForm) {
                salirForm.addEventListener('submit', async function(e) {
                        e.preventDefault();
                    
                    if (!confirm('¬øEst√°s seguro de que quieres salirte de esta comunidad?\n\nPerder√°s acceso a todos los comentarios y tendr√°s que volver a unirte para participar.')) {
                        return;
                    }
                    
                    const btn = this.querySelector('button');
                    const originalText = btn.innerHTML;
                    
                    try {
                        // Mostrar estado de carga
                        btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saliendo...';
                        btn.disabled = true;
                        
                        // Enviar petici√≥n AJAX
                        const response = await fetch(`/comunidades/<%= comunidad.idComunidad %>/salir`, {
                            method: 'POST',
                            credentials: 'same-origin'
                        });
                        
                        if (!response.ok) {
                            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                        }
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            // Mostrar mensaje de √©xito
                            showAlert('success', result.message || 'Has salido exitosamente de la comunidad');
                            
                            // Redirigir a la p√°gina de comunidades despu√©s de 2 segundos
                            setTimeout(() => {
                                window.location.href = '/comunidades';
                            }, 2000);
                            
                        } else {
                            // Mostrar error
                            showAlert('danger', result.error || 'Error al salir de la comunidad');
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                        }
                        
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('danger', 'Error de conexi√≥n. Int√©ntalo de nuevo.');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                });
            }
            
            // Manejo del formulario de unirse a la comunidad
            const unirseForm = document.getElementById('unirseForm');
            if (unirseForm) {
                unirseForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                        const btn = this.querySelector('button');
                    const originalText = btn.innerHTML;
                    
                    try {
                        // Mostrar estado de carga
                        btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Uni√©ndose...';
                        btn.disabled = true;
                        
                        // Enviar petici√≥n AJAX
                        const response = await fetch(`/comunidades/<%= comunidad.idComunidad %>/unirse`, {
                            method: 'POST',
                            credentials: 'same-origin'
                        });
                        
                        if (!response.ok) {
                            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                        }
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            // Mostrar mensaje de √©xito
                            showAlert('success', result.message || 'Te has unido exitosamente a la comunidad');
                            
                            // Recargar la p√°gina despu√©s de 2 segundos para actualizar el estado
                            setTimeout(() => {
                                window.location.reload();
                            }, 2000);
                            
                        } else {
                            // Mostrar error
                            showAlert('danger', result.error || 'Error al unirse a la comunidad');
                            btn.innerHTML = originalText;
                            btn.disabled = false;
                        }
                        
                    } catch (error) {
                        console.error('Error:', error);
                        showAlert('danger', 'Error de conexi√≥n. Int√©ntalo de nuevo.');
                        btn.innerHTML = originalText;
                        btn.disabled = false;
                    }
                });
            }
            
            // Funci√≥n para mostrar alertas
            function showAlert(type, message) {
                // Remover alertas existentes
                const existingAlerts = document.querySelectorAll('.alert');
                existingAlerts.forEach(alert => alert.remove());
                
                // Crear nueva alerta
                const alertHTML = `
                    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'} me-2"></i>
                        ${message}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                
                // Insertar en la parte superior del contenido
                const container = document.querySelector('.comments-section') || document.querySelector('.container');
                if (container) {
                    container.insertAdjacentHTML('afterbegin', alertHTML);
                    
                    // Scroll to alert
                    const newAlert = container.querySelector('.alert');
                    if (newAlert) {
                        newAlert.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                }
                
                // Auto-dismiss despu√©s de 5 segundos
                setTimeout(() => {
                    const alerts = document.querySelectorAll('.alert');
                    alerts.forEach(alert => {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    });
                }, 5000);
            }
            
            // Funci√≥n para recargar comentarios
            function cargarComentarios() {
                fetch(`/comunidades/<%= comunidad.idComunidad %>/api/comentarios`, {
                    credentials: 'same-origin'
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.comentarios) {
                            actualizarListaComentarios(data.comentarios);
                        }
                    })
                    .catch(error => {
                        console.error('Error cargando comentarios:', error);
                    });
            }
            
            // Funci√≥n para actualizar la lista de comentarios
            function actualizarListaComentarios(comentarios) {
                const comentariosContainer = document.querySelector('.comments-list');
                if (!comentariosContainer) return;
                
                // Limpiar comentarios existentes
                comentariosContainer.innerHTML = '';
                
                if (comentarios.length === 0) {
                    comentariosContainer.innerHTML = `
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-comments fa-3x mb-3"></i>
                            <p>¬°S√© el primero en comentar!</p>
                        </div>
                    `;
                    return;
                }
                
                // Agregar cada comentario
                comentarios.forEach(comentario => {
                    // Verificar si es el creador de la comunidad
                    const esCreadorComunidad = comentario.autorId && comentario.autorId === <%= comunidad.creadorId %>;
                    const badgeCreador = esCreadorComunidad ? 
                        `<span class="badge bg-warning text-dark ms-2">
                            <i class="fas fa-crown me-1"></i>
                            Creador
                        </span>` : '';
                    
                    const comentarioHTML = `
                        <div class="comment-item mb-3">
                            <div class="d-flex">
                                <div class="avatar-sm me-3">
                                    <div class="avatar-placeholder">
                                        ${comentario.autorNombre ? comentario.autorNombre.charAt(0).toUpperCase() : 'U'}
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="comment-header d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-1">
                                                ${comentario.autorNombre || 'Usuario'}
                                                ${badgeCreador}
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                ${new Date(comentario.fechaComentario).toLocaleString()}
                                            </small>
                                        </div>
                                    </div>
                                    <div class="comment-content">
                                        <p class="mb-0">${comentario.comentario}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    comentariosContainer.insertAdjacentHTML('beforeend', comentarioHTML);
                });
            }

            // Manejo del formulario de comentarios con AJAX
            const comentarioForm = document.getElementById('comentarioForm');
            if (comentarioForm) {
                comentarioForm.addEventListener('submit', async function(e) {
                    e.preventDefault(); // Prevenir env√≠o normal del formulario
                    
                    const btn = document.getElementById('btnPublicar');
                    const textarea = document.getElementById('comentarioTextarea');
                    const originalBtnText = btn.innerHTML;
                    
                    // Validaci√≥n
                    if (textarea.value.trim().length < 5) {
                        alert('El comentario debe tener al menos 5 caracteres');
                        return;
                    }
                    
                    if (textarea.value.trim().length > 1000) {
                        alert('El comentario no puede tener m√°s de 1000 caracteres');
                        return;
                    }
                    
                    try {
                        // Mostrar estado de carga
                    btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Publicando...';
                    btn.disabled = true;
                        
                        // Enviar comentario via AJAX
                        const comentarioTexto = textarea.value.trim();
                        console.log('üìù Enviando comentario:', comentarioTexto);
                        
                        const response = await fetch(`/comunidades/<%= comunidad.idComunidad %>/comentar`, {
                            method: 'POST',
                            credentials: 'same-origin',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: `comentario=${encodeURIComponent(comentarioTexto)}`
                        });
                        
                        if (!response.ok) {
                            throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                        }
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            // Limpiar textarea
                            textarea.value = '';
                            
                            // Mostrar mensaje de √©xito
                            showAlert('success', result.message || 'Comentario publicado exitosamente');
                            
                            // Recargar comentarios inmediatamente
                            cargarComentarios();
                            
                            // Actualizar contador de comentarios si existe
                            const contadorElement = document.querySelector('.section-title');
                            if (contadorElement) {
                                const comentariosContainer = document.querySelector('.comments-list');
                                if (comentariosContainer) {
                                    const numComentarios = comentariosContainer.children.length;
                                    contadorElement.innerHTML = `<i class="fas fa-comments"></i> Comentarios (${numComentarios})`;
                                }
                            }
                            
                        } else {
                            // Mostrar error
                            showAlert('danger', result.error || 'Error al publicar el comentario');
                        }
                        
                    } catch (error) {
                        console.error('Error enviando comentario:', error);
                        showAlert('danger', 'Error de conexi√≥n al enviar comentario. Verifica tu conexi√≥n e int√©ntalo de nuevo.');
                    } finally {
                        // Restaurar bot√≥n
                        btn.innerHTML = originalBtnText;
                        btn.disabled = false;
                    }
                });
            }
            
            // Auto-scroll si hay hash #comentarios en la URL
            if (window.location.hash === '#comentarios') {
                setTimeout(() => {
                    const element = document.getElementById('comentarios');
                    if (element) {
                        element.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                }, 300);
            }
            
            // Log para debugging
            console.log('üèòÔ∏è Informaci√≥n de la comunidad:');
            console.log('- ID:', <%= comunidad.idComunidad %>);
            console.log('- T√≠tulo:', '<%= comunidad.titulo %>');
            console.log('- Es creador:', <%= esCreador %>);
            console.log('- Es miembro:', <%= esMiembro %>);
            console.log('- Es administrador:', '<%= rolEnComunidad %>' === 'administrador');
            console.log('- Total miembros:', <%= comunidad.totalMiembros || 0 %>);
            console.log('- Total comentarios:', <%= comentarios.length %>);
        });
    </script>
    
