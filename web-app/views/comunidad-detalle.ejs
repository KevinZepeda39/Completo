    <!-- Header de la Comunidad -->
    <div class="community-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="community-info">
                        <% 
                        let categoryEmoji = 'üìã';
                        let categoryName = comunidad.categoria || 'general';
                        
                        switch(categoryName) {
                            case 'tecnologia': categoryEmoji = 'üíª'; break;
                            case 'deportes': categoryEmoji = '‚öΩ'; break;
                            case 'cultura': categoryEmoji = 'üé®'; break;
                            case 'educacion': categoryEmoji = 'üìö'; break;
                            case 'salud': categoryEmoji = 'üè•'; break;
                            default: categoryEmoji = 'üìã';
                        }
                        %>
                        
                        <div class="category-badge">
                            <%= categoryEmoji %> <%= categoryName.charAt(0).toUpperCase() + categoryName.slice(1) %>
                        </div>
                        
                        <h1 class="community-title"><%= comunidad.titulo %></h1>
                        
                        <% if (comunidad.estado === 'suspendida') { %>
                            <div class="alert alert-warning d-inline-block mb-3" role="alert">
                                <i class="fas fa-pause-circle me-2"></i>
                                <strong>Comunidad Suspendida</strong> - No se permiten nuevos comentarios
                            </div>
                        <% } else if (comunidad.estado === 'eliminada') { %>
                            <div class="alert alert-danger d-inline-block mb-3" role="alert">
                                <i class="fas fa-times-circle me-2"></i>
                                <strong>Comunidad Eliminada</strong> - No disponible
                            </div>
                        <% } %>
                        
                        <p class="community-description">
                            <%= comunidad.descripcion %>
                        </p>
                        
                        <div class="community-meta">
                            <div class="meta-item">
                                <i class="fas fa-user"></i>
                                <span>Creado por <%= comunidad.creadorNombre || 'Usuario An√≥nimo' %></span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-calendar"></i>
                                <span><%= new Date(comunidad.fechaCreacion).toLocaleDateString('es-ES', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                }) %></span>
                            </div>
                            <div class="meta-item">
                                <i class="fas fa-users"></i>
                                <span><%= comunidad.totalMiembros || 0 %> miembros</span>
                            </div>
                        </div>
                        
                        <% if (comunidad.tags) { %>
                        <div class="tags-container">
                            <% 
                            const tags = comunidad.tags.split(',');
                            tags.forEach(function(tag) { 
                                if (tag.trim()) {
                            %>
                            <span class="tag">#<%= tag.trim() %></span>
                            <% 
                                }
                            }); 
                            %>
                        </div>
                        <% } %>
                        
                        <div class="action-buttons">
                            <% if (loggedIn) { %>
                                <% if (esCreador) { %>
                                    <button class="btn btn-creator" disabled>
                                        <i class="fas fa-crown me-2"></i>
                                        Creador de la Comunidad
                                    </button>
                                <% } else if (!esMiembro) { %>
                                    <form action="/comunidades/<%= comunidad.idComunidad %>/unirse" method="POST" style="display: inline;" id="unirseForm">
                                        <button type="submit" class="btn btn-join">
                                            <i class="fas fa-plus me-2"></i>
                                            Unirse a la Comunidad
                                        </button>
                                    </form>
                                <% } else { %>
                                    <form action="/comunidades/<%= comunidad.idComunidad %>/salir" method="POST" style="display: inline;" id="salirComunidadForm">
                                        <button type="submit" class="btn btn-leave">
                                            <i class="fas fa-sign-out-alt me-2"></i>
                                            Salirse de la Comunidad
                                        </button>
                                    </form>
                                <% } %>
                            <% } else { %>
                                <a href="/auth/login?redirect=/comunidades/<%= comunidad.idComunidad %>" class="btn btn-join">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Inicia sesi√≥n para unirte
                                </a>
                            <% } %>
                            
                            <a href="/comunidades" class="btn-back">
                                <i class="fas fa-arrow-left me-2"></i>
                                Volver a Comunidades
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="main-content">
        <div class="container">
            <!-- Alertas -->
            <% if (typeof mensaje !== 'undefined' && mensaje) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= mensaje %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="row">
                <!-- Columna principal - Comentarios -->
                <div class="col-lg-8">
                    <!-- Formulario para comentar (solo para miembros y creadores) -->
                    <% if (loggedIn && (esMiembro || esCreador)) { %>
                    <div class="content-card" id="comentarios">
                        <h3 class="section-title">
                            <i class="fas fa-comment-dots"></i>
                            Agregar Comentario
                            <% if (esCreador) { %>
                                <span class="badge bg-warning ms-2">
                                    <i class="fas fa-crown me-1"></i>
                                    Creador
                                </span>
                            <% } else { %>
                                <span class="badge bg-success ms-2">
                                    <i class="fas fa-check me-1"></i>
                                    Miembro
                                </span>
                            <% } %>
                        </h3>
                        
                        <% if (comunidad.estado === 'suspendida') { %>
                            <!-- Comunidad suspendida - No se pueden comentar -->
                            <div class="alert alert-warning" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle fa-2x me-3 text-warning"></i>
                                    <div>
                                        <h5 class="alert-heading mb-2">
                                            <i class="fas fa-pause-circle me-2"></i>
                                            Comunidad Suspendida
                                        </h5>
                                        <p class="mb-0">
                                            Esta comunidad ha sido suspendida por los administradores. 
                                            No se pueden enviar nuevos comentarios hasta que se resuelva la situaci√≥n.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% } else if (comunidad.estado === 'eliminada') { %>
                            <!-- Comunidad eliminada -->
                            <div class="alert alert-danger" role="alert">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-times-circle fa-2x me-3 text-danger"></i>
                                    <div>
                                        <h5 class="alert-heading mb-2">
                                            <i class="fas fa-trash me-2"></i>
                                            Comunidad No Disponible
                                        </h5>
                                        <p class="mb-0">
                                            Esta comunidad ha sido eliminada y no est√° disponible para comentarios.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <!-- Formulario de comentarios normal -->
                            <form action="/comunidades/<%= comunidad.idComunidad %>/comentar" method="POST" class="comment-form" id="comentarioForm">
                                <div class="mb-3">
                                    <textarea name="comentario" class="form-control" rows="4" 
                                              placeholder="¬°Comparte tus ideas y participa en la conversaci√≥n!" 
