    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Sistema de Temas -->
    <script src="/js/theme-switcher.js"></script>
    
    <script>
        // Función para aplicar tema
        function applyTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }

        // Función para obtener tema guardado
        function getSavedTheme() {
            return localStorage.getItem('theme') || 'light';
        }

        // Aplicar tema al cargar
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = getSavedTheme();
            applyTheme(savedTheme);
            
            // Actualizar icono del botón de tema
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                const icon = themeToggle.querySelector('i');
                if (savedTheme === 'dark') {
                    icon.className = 'bi bi-sun';
                    themeToggle.title = 'Cambiar a modo claro';
                } else {
                    icon.className = 'bi bi-moon-stars';
                    themeToggle.title = 'Cambiar a modo oscuro';
                }
            }
        });

        // Manejar cambio de tema
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('editProfileForm');
            const btnGuardar = document.getElementById('btnGuardar');
            const alertContainer = document.getElementById('alert-container');
            
            // Función para mostrar alertas
            function showAlert(type, message) {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                
                alertContainer.innerHTML = '';
                alertContainer.appendChild(alertDiv);
                
                // Auto-dismiss después de 5 segundos
                setTimeout(() => {
                    if (alertDiv.parentNode) {
                        alertDiv.remove();
                    }
                }, 5000);
            }
            
            // Función para actualizar campo individual
            async function updateField(campo, valor) {
                try {
                    const response = await fetch('/dashboard/actualizar-perfil', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ campo, valor })
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        return { success: true, message: data.message };
                    } else {
                        return { success: false, message: data.message || 'Error al actualizar' };
                    }
                } catch (error) {
                    console.error('Error:', error);
                    return { success: false, message: 'Error de conexión' };
                }
            }
            
            // Manejar envío del formulario
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const nombre = document.getElementById('nombre').value.trim();
                const correo = document.getElementById('correo').value.trim();
                
                // Validaciones básicas
                if (!nombre || !correo) {
                    showAlert('danger', 'Por favor, completa todos los campos requeridos.');
                    return;
                }
                
                // Validar formato de email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(correo)) {
                    showAlert('danger', 'Por favor, ingresa un correo electrónico válido.');
                    return;
                }
                
                // Deshabilitar botón y mostrar loading
                btnGuardar.disabled = true;
                btnGuardar.classList.add('btn-loading');
                btnGuardar.innerHTML = '<span>Guardando...</span>';
                
                try {
                    // Actualizar nombre si cambió
                    let nombreUpdated = false;
                    if (nombre !== '<%= usuario.nombre %>') {
                        const nombreResult = await updateField('nombre', nombre);
                        if (nombreResult.success) {
                            nombreUpdated = true;
                        } else {
                            showAlert('danger', `Error al actualizar nombre: ${nombreResult.message}`);
                            return;
                        }
                    }
                    
                    // Actualizar correo si cambió
                    let correoUpdated = false;
                    if (correo !== '<%= usuario.correo %>') {
                        const correoResult = await updateField('correo', correo);
                        if (correoResult.success) {
                            correoUpdated = true;
                        } else {
                            showAlert('danger', `Error al actualizar correo: ${correoResult.message}`);
                            return;
                        }
                    }
                    
                    // Mostrar mensaje de éxito
                    if (nombreUpdated || correoUpdated) {
                        showAlert('success', 'Perfil actualizado correctamente. Los cambios se reflejarán en la próxima sesión.');
                        
                        // Actualizar el header del perfil
                        if (nombreUpdated) {
                            document.querySelector('.profile-name').textContent = nombre;
                        }
                        if (correoUpdated) {
                            document.querySelector('.profile-email').textContent = correo;
                        }
                    } else {
                        showAlert('info', 'No se realizaron cambios en el perfil.');
                    }
                    
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('danger', 'Error interno del servidor. Por favor, intenta de nuevo.');
                } finally {
                    // Restaurar botón
                    btnGuardar.disabled = false;
                    btnGuardar.classList.remove('btn-loading');
                    btnGuardar.innerHTML = '<i class="bi bi-check-circle me-2"></i>Guardar Cambios';
                }
            });
            
            // Validación en tiempo real
            document.getElementById('nombre').addEventListener('input', function() {
                this.classList.remove('is-invalid');
            });
            
            document.getElementById('correo').addEventListener('input', function() {
                this.classList.remove('is-invalid');
            });

            // Event listener para el botón de cambio de tema
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const currentTheme = getSavedTheme();
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    applyTheme(newTheme);
                    
                    // Actualizar icono
                    const icon = this.querySelector('i');
                    if (newTheme === 'dark') {
                        icon.className = 'bi bi-sun';
                        this.title = 'Cambiar a modo claro';
                    } else {
                        icon.className = 'bi bi-moon-stars';
                        this.title = 'Cambiar a modo oscuro';
                    }
                });
            }
        });
    </script>
</body>
</html>
