                                    <i class="bi bi-arrow-left me-2"></i>
                                    Volver al Dashboard
                                </a>
                            </div>
                        </form>
                        
                        <hr class="my-4">
                        
                        <!-- Account Information -->
                        <h5 class="mb-3">
                            <i class="bi bi-info-circle me-2" style="color: var(--primary) !important;"></i>
                            Información de la Cuenta
                        </h5>
                        
                        <div class="row">
