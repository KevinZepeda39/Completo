                </div>
                <div class="stat-number"><%= totalUsuarios || 42 %></div>
                <div class="stat-label">Total Usuarios</div>
            </div>
            
            <div class="stat-card fade-in-up">
                <div class="stat-icon">
                    <i class="bi bi-flag"></i>
                </div>
                <div class="stat-number"><%= totalReportes || 16 %></div>
                <div class="stat-label">Total Reportes</div>
            </div>
            
            <div class="stat-card fade-in-up">
                <div class="stat-icon">
                    <i class="bi bi-building"></i>
                </div>
                <div class="stat-number"><%= totalComunidades || 36 %></div>
                <div class="stat-label">Comunidades</div>
            </div>
            
            <div class="stat-card fade-in-up">
                <div class="stat-icon">
                    <i class="bi bi-chat-dots"></i>
                </div>
                <div class="stat-number"><%= totalMensajes || 12 %></div>
                <div class="stat-label">Mensajes</div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <h3>
                <i class="bi bi-lightning-charge text-warning"></i>
                Acciones Rápidas
            </h3>
            <div class="action-buttons">
                <a href="/reportes/crear" class="action-btn action-btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Crear Reporte
                </a>
                <a href="/dashboard/perfil" class="action-btn action-btn-secondary">
                    <i class="bi bi-person-circle"></i>
                    Ver Mi Perfil
                </a>
                <a href="/comunidades" class="action-btn action-btn-secondary">
                    <i class="bi bi-people-fill"></i>
                    Gestionar Comunidades
                </a>
                <a href="/reportes" class="action-btn action-btn-secondary">
                    <i class="bi bi-list-ul"></i>
                    Ver Todos los Reportes
                </a>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="content-grid">
            <!-- Recent Reports -->
            <div class="recent-reports">
                <h3>
                    <i class="bi bi-clock-history text-primary"></i>
                    Reportes Recientes
                </h3>
                
                <% if (typeof reportesRecientes !== 'undefined' && reportesRecientes.length > 0) { %>
                    <% reportesRecientes.slice(0, 5).forEach(function(reporte) { %>
                        <div class="report-item">
                            <div class="report-info">
                                <h6><%= reporte.titulo %></h6>
                                <small>Por <%= reporte.usuarioNombre || 'Usuario' %> • <%= new Date(reporte.fechaCreacion).toLocaleDateString('es-SV') %></small>
                            </div>
                            <span class="report-status status-<%= reporte.estado %>">
                                <%= reporte.estado.charAt(0).toUpperCase() + reporte.estado.slice(1) %>
                            </span>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="bi bi-flag text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No hay reportes recientes</p>
                        <a href="/reportes/crear" class="btn btn-primary">
                            <i class="bi bi-plus me-2"></i>
                            Crear Primer Reporte
                        </a>
                    </div>
                <% } %>
            </div>

            <!-- Communities Section -->
            <div class="communities-section">
                <h3>
                    <i class="bi bi-people-fill text-success"></i>
                    Mis Comunidades
                </h3>
                
                <% if (typeof comunidadesUsuario !== 'undefined' && comunidadesUsuario.length > 0) { %>
                    <% comunidadesUsuario.slice(0, 3).forEach(function(comunidad) { %>
                        <div class="report-item">
                            <div class="report-info">
                                <h6><%= comunidad.titulo %></h6>
                                <small><%= comunidad.miembros || 0 %> miembros</small>
                            </div>
                            <span class="report-status status-completado">
                                Activa
                            </span>
                        </div>
                    <% }); %>
                    
                    <% if (comunidadesUsuario.length > 3) { %>
                        <a href="/comunidades" class="btn btn-outline-primary mt-3">
                            Ver Todas (<%= comunidadesUsuario.length %>)
                        </a>
                    <% } %>
                <% } else { %>
                    <div class="no-communities">
                        <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-3">No perteneces a ninguna comunidad</p>
                    </div>
                    <a href="/comunidades" class="explore-btn">
                        <i class="bi bi-search"></i>
                        Explorar Comunidades
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Sistema de Temas -->
    <script src="/js/theme-switcher.js"></script>
    
    <script>
        // Función para aplicar tema
        function applyTheme(theme) {
            document.documentElement.setAttribute('data-theme', theme);
            localStorage.setItem('theme', theme);
        }

        // Función para obtener tema guardado
        function getSavedTheme() {
            return localStorage.getItem('theme') || 'light';
        }

        // Aplicar tema al cargar
        document.addEventListener('DOMContentLoaded', function() {
            const savedTheme = getSavedTheme();
            applyTheme(savedTheme);
            
            // Actualizar icono del botón de tema
            const themeToggle = document.getElementById('theme-toggle');
            if (themeToggle) {
                const icon = themeToggle.querySelector('i');
                if (savedTheme === 'dark') {
                    icon.className = 'bi bi-sun';
                    themeToggle.title = 'Cambiar a modo claro';
                } else {
                    icon.className = 'bi bi-moon-stars';
                    themeToggle.title = 'Cambiar a modo oscuro';
                }
            }
            
            // Marcar página activa en el navbar
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add hover effects to cards
        document.querySelectorAll('.card, .stat-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Event listener para el botón de cambio de tema
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle) {
            themeToggle.addEventListener('click', function() {
                const currentTheme = getSavedTheme();
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                applyTheme(newTheme);
                
                // Actualizar icono
                const icon = this.querySelector('i');
                if (newTheme === 'dark') {
                    icon.className = 'bi bi-sun';
                    this.title = 'Cambiar a modo claro';
                } else {
                    icon.className = 'bi bi-moon-stars';
                    this.title = 'Cambiar a modo oscuro';
                }
            });
        }
    </script>
</body>
</html>
